---
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon";
---

<Layout title="Thanks" description="Thank you page">
  <section class="grid place-items-center text-center overflow-hidden mt-9">
    <Icon name="mdi:shark-fin-outline" class="w-36 h-36" />
    <h1 class="my-8 text-5xl font-semibold">Terima kasih</h1>
    <h2 class="text-2xl dark:text-zinc-300 mb-5">Kami akan segera hubungi anda kembali.</h2>
    <a
      href="/"
      class="dark:bg-zinc-800 bg-zinc-200 rounded-xl p-3 text-black dark:text-white m-2 ring-2 ring-opacity-0 ring-blue-500 hover:ring-opacity-100"
      >Kembali ke beranda</a
    >
  </section>
</Layout>
